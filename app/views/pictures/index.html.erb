<h1>Feeds</h1>
<%= link_to 'New Feed', new_picture_path %>
<table class="main_table">
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= image_tag picture.image.url %></td>
        <% if picture.user_id == current_user.id %>
          <td><%= link_to 'Show', picture %><br><%= link_to 'Edit', edit_picture_path(picture.id) %><br><%= link_to 'Destroy', picture_path(picture.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
</table>

<br>
